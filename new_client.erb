            <div class="form-group row">
              <label for="name" class="col-sm-3 form-control-label">Company Name</label>
              <div class="col-sm-7">
               <input type="text" class="form-control" name="client_name" id="name" placeholder="Enter company name">
             </div>
           </div>

          <div class="form-group row">
            <label for="client_id" class="col-sm-3 form-control-label">Client ID</label>
            <div class="col-sm-7">
